{
  "name": "miramate-v2-client",
  "version": "1.0.2",
  "main": "dist-electron/main.mjs",
  "private": true,
  "type": "module",
  "engines": {
    "node": "^20.19.0 || >=22.12.0"
  },
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc && vite build",
    "preview": "vite preview",
    "build-only": "vite build",
    "type-check": "vue-tsc --build",
    "lint": "eslint . --fix",
    "format": "prettier --write src/",
    "electron:build": "npm run build && electron-builder",
    "electron:build-win": "npm run build && electron-builder --win",
    "electron:build-mac": "npm run build && electron-builder --mac",
    "electron:build-linux": "npm run build && electron-builder --linux",
    "mobile:dev": "vite --mode mobile",
    "mobile:build": "vue-tsc && vite build --mode mobile",
    "cap:init": "cap init",
    "cap:add:android": "cap add android",
    "cap:sync": "npm run build && cap sync",
    "cap:open:android": "cap open android",
    "cap:copy": "cap copy"
  },
  "dependencies": {
    "@capacitor/core": "^6.1.2",
    "@capacitor/local-notifications": "^6.1.0",
    "@capacitor/preferences": "^6.0.3",
    "emoji-picker-element": "^1.26.3",
    "mermaid": "^11.12.1",
    "pinia": "^3.0.3",
    "vue": "^3.5.18",
    "vue-renderer-markdown": "^0.0.61-beta.8",
    "vue-router": "^4.5.1"
  },
  "devDependencies": {
    "@capacitor/android": "^6.1.2",
    "@capacitor/cli": "^6.1.2",
    "@tsconfig/node22": "^22.0.2",
    "@types/node": "^22.16.5",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vue/eslint-config-prettier": "^10.2.0",
    "@vue/eslint-config-typescript": "^14.6.0",
    "@vue/tsconfig": "^0.7.0",
    "autoprefixer": "^10.4.21",
    "electron": "^37.3.0",
    "electron-builder": "^26.0.12",
    "eslint": "^9.31.0",
    "eslint-plugin-vue": "~10.3.0",
    "jiti": "^2.4.2",
    "npm-run-all2": "^8.0.4",
    "postcss": "^8.5.6",
    "prettier": "3.6.2",
    "tailwindcss": "^3.4.17",
    "typescript": "~5.8.0",
    "vite": "^7.0.6",
    "vite-plugin-electron": "^0.29.0",
    "vite-plugin-electron-renderer": "^0.14.6",
    "vite-plugin-vue-devtools": "^8.0.0",
    "vue-tsc": "^3.0.4"
  },
  "build": {
    "appId": "com.miramate.app",
    "productName": "MiraMate",
    "copyright": "Copyright Â© 2025 MiraMate",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "node_modules/**/*"
    ],
    "win": {
      "icon": "src/assets/images/favicon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "mac": {
      "icon": "src/assets/images/favicon.ico",
      "category": "public.app-category.productivity"
    },
    "linux": {
      "icon": "src/assets/images/favicon.ico",
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
